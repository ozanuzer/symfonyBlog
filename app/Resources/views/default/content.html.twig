<body>

	<div id="wrapper" class="container">
    	<div class="row">
            <div id="left-sidebar" class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <div class="logo-wrapper">
                    <a href="/" title=""><img src="{{ asset('default/images/logo.png') }}" alt="" /></a>
                </div><!-- end logo-wrapper -->
                <div class="menu-wrapper">
                    <nav class="flat-menu flat-menu-dark-orange flat-menu-slide-up">
                        <input type="checkbox" id="toggle-one" name="toggle" class="toggle-menu-input">
                        <label for="toggle-one" class="toggle-menu-label"><span class="fa fa-bars"></span>Menu</label>
                        <ul class="flat-responsive-menu">
                            <li>
                                <a href="about.html">Ana Sayfa</a>
                            </li>
                            <li>
                                <input type="checkbox" id="menu-five" name="menu" class="menu-2">
                                <label for="menu-five">Categories</label>
                                    <ul class="menu-dropdown-two">
                                        {% for item in val.cats.items %}
                                            {% if item.subs == 0 %}
                                            <li><a href="/categories/{{ item.slug }}">{{ item.title }}</a></li>
                                            {% else %}
                                            <li>
                                                <input type="checkbox" id="menu-six" name="menu" class="menu-3">
                                                <label for="menu-six"><i class="fa fa-angle-right"></i>{{ item.title }}</label>
                                                <ul class="menu-dropdown-three">
                                                    {% for subitem in val.cats.items.subs %}
                                                        <li><a href="/categories/{{ subitem.slug }}">{{ subitem.title }}</a></li>
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                        </ul>
                                            {% endif %}
                                        {% endfor %}

                        </ul>
                    </nav><!-- end menu -->
                </div><!-- end menu wrapper -->

                <div class="mini-widget">
                    <form id="search_form">
                        <input class="form-control" placeholder="Search on this blog..." />
                    </form><!-- mini-widget -->
                </div><!-- mini-widget -->
            </div><!-- end left-sidebar -->

            <div id="main" class="col-lg-10 col-md-10 col-sm-8 col-xs-12 nopad">

                <article class="general-wrapper">
                    <div class="title">
                        <h3>{{ val.content.item.title }}</h3>
                        <div class="byline">
                            <span><i class="fa fa-folder-open-o"></i> <a href="/categories/{{ val.content.item.cat.slug }}" title="">{{ val.content.item.cat.title }}</a></span>
                            <span><i class="fa fa-calendar-o"></i> <a href="#" title="">{{ val.content.item.date|date('Y-m-d') }}</a></span>
                        </div>
                    </div>
                </article><!-- end author-wrapper -->

                <article class="general-wrapper">
                    <div class="post-desc">
                        {{ val.content.item.content | raw }}
                    </div>
                </article><!-- end author-wrapper -->








                <div class="clearfix"></div>
                </div><!-- end row -->

            </div><!-- end main -->

    	</div><!-- end row -->
