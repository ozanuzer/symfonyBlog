{# app/Resources/views/Admin/category.html.twig #}
{% include('Admin/header.html.twig') %}
      <!-- BEGIN PAGE -->
      <div class="page-content">
         <!-- BEGIN PAGE HEADER-->
         <div class="row">
            <div class="col-md-12">
               <!-- BEGIN PAGE TITLE & BREADCRUMB-->
               <h3 class="page-title">
                  Kategori <small>Yönetimi</small>
               </h3>
               <ul class="page-breadcrumb breadcrumb">

                  <li>
                     <i class="icon-home"></i>
                     <a href="index.html">Ana Sayfa</a>
                     <i class="icon-angle-right"></i>
                  </li>
                  <li>
                     <a href='/admin/categories'>Kategoriler</a>
                     <i class="icon-angle-right"></i>
                  </li>
{% if val.process == 'default' %}
                  <li><a href="#">Show all</a></li>
               </ul>
               <!-- END PAGE TITLE & BREADCRUMB-->
            </div>
         </div>
         <!-- END PAGE HEADER-->
         <!-- BEGIN PAGE CONTENT-->
         <div class="row">
            <div class="col-md-12">

               <div class="portlet box blue">
                  <div class="portlet-title">
                     <div class="caption"><i class="icon-globe"></i><a href='/admin/categories/new' style="color:#fff;" >Yeni Kategori</a></div>
                     <div class="actions">
                        <div class="btn-group">
                           <a class="btn default" href="#" data-toggle="dropdown">
                           Columns
                           <i class="icon-angle-down"></i>
                           </a>
                           <div id="sample_2_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                              <label><input type="checkbox" checked data-column="0">id</label>
                              <label><input type="checkbox" checked data-column="1">Ad</label>
                              <label><input type="checkbox" checked data-column="2">Alt Kategorileri</label>
                              <label><input type="checkbox" checked data-column="3">Toplam İçerik</label>
                              <label><input type="checkbox" checked data-column="5">İşlem</label>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="portlet-body">
                     <table class="table table-striped table-bordered table-hover table-full-width" id="sample_2">
                        <thead>
                           <tr>
                              <th>#</th>
                              <th>Ad</th>
                              <th>Alt Kategorileri</th>
                              <th>Toplam İçerik</th>
                              <th class="hidden-xs">İşlem</th>
                           </tr>
                        </thead>
                        <tbody>
                              {% for item in val.items %}
                           <tr id = "{{ item.id }}">
                              <td>{{ item.id }}</td>
                              <td>{{ item.title }}</td>
                              <td>{{ item.subs }}</td>
                              <td>{{ item.relatedContents }}</td>
                              <td><a href='/admin/categories/edit?id={{ item.id }}' >Düzenle</a>
                                  &nbsp;|&nbsp;<a href='/admin/categories/delete?id={{ item.id }}&main={{ item.main }}' >Sil</a></td>
                           </tr>
                           {% endfor %}
                        </tbody>
                     </table>
                  </div>
               </div>
               <!-- END EXAMPLE TABLE PORTLET-->
            </div>
         </div>

{% elseif val.process == 'new' %}
      <li><a href="#">Yeni Kategori</a></li>
               </ul>
               <!-- END PAGE TITLE & BREADCRUMB-->
            </div>
         </div>
         <!-- END PAGE HEADER-->
         <!-- BEGIN PAGE CONTENT-->
         <div class="row">
            <div class="col-md-12">

               <div class="portlet box green">
                           <div class="portlet-title">
                              <div class="caption"><i class="icon-reorder"></i>Yeni Kategori</div>

                           </div>
                           <div class="portlet-body form">
                              <!-- BEGIN FORM-->
                              <form action="/admin/categories/new" class="form-horizontal" method="post">
                                 <input type="hidden" name="new_cat" value="1" />
                                 <div class="form-body">
                                    <div class="form-group">
                                       <label  class="col-md-3 control-label">Kategori Adı</label>
                                       <div class="col-md-4">
                                          <input type="text" class="form-control" placeholder="Enter Name" name="title">
                                          <span class="help-block">Kategori Adı.</span>
                                       </div>
                                    </div>

                                    <div class="form-group last">
                                       <label  class="col-md-3 control-label">Üst Kategori</label>
                                       <div class="col-md-9">
                                          <select class="form-control select2_category" name="main">
                                             <option value="0">Ana Kategori</option>
                                             {% for cat in val.cats %}
                                             <option value="{{cat.id}}">{{cat.title}}</option>
                                             {% endfor %}
                                          </select>
                                       </div>
                                    </div>

                                 </div>
                                 <div class="form-actions fluid">
                                    <div class="col-md-offset-3 col-md-9">
                                       <button type="submit" class="btn blue">Submit</button>
                                       <button type="button" class="btn default">Cancel</button>
                                    </div>
                                 </div>
                              </form>
                              <!-- END FORM-->
                           </div>
                        </div>
            </div>
         </div>
{% elseif val.process == 'edit' %}
<li><a href="#">Edit Category</a></li>
               </ul>
               <!-- END PAGE TITLE & BREADCRUMB-->
            </div>
         </div>
         <!-- END PAGE HEADER-->
         <!-- BEGIN PAGE CONTENT-->
         <div class="row">
            <div class="col-md-12">
               {% if val.item.main==0 %}
               <div class="portlet box blue">
                  <div class="portlet-title">
                     <div class="caption"><i class="icon-globe"></i><a href='/admin/categories/new' style="color:#fff;" >Yeni Kategori</a></div>
                     <div class="actions">
                        <div class="btn-group">
                           <a class="btn default" href="#" data-toggle="dropdown">
                           Columns
                           <i class="icon-angle-down"></i>
                           </a>
                           <div id="sample_2_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                              <label><input type="checkbox" checked data-column="0">id</label>
                              <label><input type="checkbox" checked data-column="1">Ad</label>
                              <label><input type="checkbox" checked data-column="3">Toplam İçerik</label>
                              <label><input type="checkbox" checked data-column="4">İşlem</label>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="portlet-body">
                     <table class="table table-striped table-bordered table-hover table-full-width" id="sample_2">
                        <thead>
                           <tr>
                              <th>#</th>
                              <th>Ad</th>
                              <th>Toplam İçerik</th>
                              <th class="hidden-xs">İşlem</th>
                           </tr>
                        </thead>
                        <tbody>
                              {% for subcat in val.items %}
                           <tr id = "{{ subcat.id }}">
                              <td>{{ subcat.id }}</td>
                              <td>{{ subcat.title }}</td>
                              <td>{{ subcat.relatedContents }}</td>
                              <td><a href='/admin/categories/edit?id={{ subcat.id }}' >Düzenle</a>&nbsp;|&nbsp;<a href='/admin/categories/delete?id={{ subcat.id }}&main={{ subcat.main }}' >Sil</a></td>
                           </tr>
                           {% endfor %}
                        </tbody>
                     </table>
                  </div>
               </div>
               <!-- END EXAMPLE TABLE PORTLET-->
               {% endif %}

               <div class="portlet box green">
                           <div class="portlet-title">
                              <div class="caption"><i class="icon-reorder"></i>Kategori Düzenle - {{ val.item.title }}</div>
                              <div class="tools">
                                 <a href="javascript:;" class="collapse"></a>
                                 <a href="#portlet-config" data-toggle="modal" class="config"></a>
                                 <a href="javascript:;" class="reload"></a>
                                 <a href="javascript:;" class="remove"></a>
                              </div>
                           </div>
                           <div class="portlet-body form">
                              <!-- BEGIN FORM-->
                              <form action='/admin/categories/edit?id={{val.item.id}}' class="form-horizontal" method="post">
                                 <input type="hidden" name="old_main" value="{{ val.item.main }}" />
                                 <div class="form-body">
                                    <div class="form-group">
                                       <label  class="col-md-3 control-label">Kategori Adı</label>
                                       <div class="col-md-4">
                                          <input type="text" class="form-control" placeholder="Enter Name" name="title" value="{{ val.item.title }}">
                                          <span class="help-block">Kategori Adını Yazınız.</span>
                                       </div>
                                    </div>

                                    <div class="form-group last">
                                       <label  class="col-md-3 control-label">Üst Kategori</label>
                                       <div class="col-md-9">
                                          <select class="form-control select2_category" name="main">
                                             <option {% if val.item.main == 0 %} selected {% endif %} value="0">Ana Kategori</option>
                                             {% for cat in val.cats %}
                                                {% if val.item.id != cat.id %}
                                                    {% if val.item.main == cat.id %}
                                                        <option selected value="{{cat.id}}">{{cat.title}}</option>
                                                    {% else %}
                                                        <option value="{{cat.id}}">{{cat.title}}</option>
                                                    {% endif %}
                                                {% endif %}
                                             {% endfor %}
                                          </select>
                                       </div>
                                    </div>

                                 </div>
                                 <div class="form-actions fluid">
                                    <div class="col-md-offset-3 col-md-9">
                                       <button type="submit" class="btn blue">Submit</button>
                                       <button type="button" class="btn default">Cancel</button>
                                    </div>
                                 </div>
                              </form>
                              <!-- END FORM-->
                           </div>
                        </div>

            </div>
         </div>
{% endif %}





         <!-- END PAGE CONTENT-->
      </div>
      <!-- END PAGE -->
   </div>
   <!-- END CONTAINER -->

{% include('Admin/footer.html.twig') %}
